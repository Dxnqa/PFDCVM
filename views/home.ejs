<%- include("partials/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
  </head>
  <body>
    <div class="container mt-4 pb-3">
      <div class="row">
        <div
          class="col-md-4 bg-body border border-black border-3 rounded-2 px-3 py-2"
          id="TechPanel"
        >
          <!--Tech Panel-->
          <form action="/submit" method="POST" class="text-center">
            <label for="name" class="h4">Caller</label>
            <!--Caller name-->
            <input
              type="text"
              name="name"
              id="name"
              class="form-control border border-black"
              placeholder="Caller Name"
            />

            <label for="category" class="h4">Category</label>
            <!--Call Category-->
            <select
              name="category"
              id="category"
              class="form-select mt-2 mb-md-3 border border-black"
            >
              <option selected>Select a category</option>
              <option value="AlaskaNow Call">AlaskaNow Call</option>
              <option value="MyAlaska Call">MyAlaska Call</option>
              <option value="MFA Issues">MFA Issues</option>
              <option value="PFD Password Reset">PFD Password Reset</option>
              <option value="PFD E-Signature">PFD E-Signature</option>
              <option value="PFD Combined Questions">
                PFD Combined Questions
              </option>
              <option value="PFD 1099">PFD 1099</option>
              <option value="PFD Referral w/o MyAlaska's Assistance">
                PFD Referral w/o MyAlaska's Assistance
              </option>
              <option value="PFD Reactivate Account">
                PFD Reactivate Account
              </option>
              <option value="PFD Create Account">PFD Create Account</option>
            </select>
            <label for="resolution" class="h4">Resolution status</label>
            <!--Resolution Status-->
            <select
              name="resolution"
              id="resolution"
              class="form-select mt-2 mb-md-3 border border-black"
            >
              <option selected>Did you resolve this?</option>
              <option value="Yes - minimal assistance">
                Yes - minimal assistance
              </option>
              <option value="Yes - additional assistance">
                Yes - additional assistance
              </option>
              <option value="Yes - extended duration">
                Yes - extended duration
              </option>
              <option value="No - unable to help user">
                No - unable to help user
              </option>
              <option value="No - call disconnected">
                No - call disconnected
              </option>
              <option value="No - Issue unrelated">No - Issue unrelated</option>
            </select>
            <label for="notes" class="h4">Technician Notes</label>
            <!--Additional notes-->
            <textarea
              name="notes"
              id="notes"
              style="height: 90px"
              placeholder="Additional Notes(optional)"
              maxlength="250"
              class="form-control mt-2 mb-md-1 border border-black"
            ></textarea>
            <a
              href="database"
              class="btn btn-warning rounded-2 border border-2 border-black"
              >Database</a
            >
            <input
              type="submit"
              class="btn btn-outline-success mt-3 mb-3 rounded-3"
              value="Submit Entry"
            />
          </form>
        </div>
        <div class="col-md-1"></div>
        <div
          class="col-md-7 bg-transparent border border-black border-3 rounded-2 px-3 py-2 d-none d-md-block"
        >
          <!--Activity/Logs Section-->
          <div class="row">
            <div class="col-md-12 text-center">
              <p class="h2 fw-semibold">Team Console</p>
            </div>
            <hr class="border border-secondary border-2 opacity-100" />
          </div>
          <div class="row">
            <div
              class="col-md-6 border border-2 border-black text-center rounded-2"
            >
              <p class="h4 fw-semibold">Activity logs</p>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 border border-2 border-black rounded-2">
              <p class="h4 fw-semibold text-center">Calls recorded</p>
              <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">AlaskaNow Calls:</li>
                <li class="nav-item">MyAlaska Calls:</li>
                <li class="nav-item">MFA Issues:</li>
                <li class="nav-item">PFD Password resets:</li>
                <li class="nav-item">PFD E-Signatures:</li>
                <li class="nav-item">PFD Combined-Questions:</li>
                <li class="nav-item">PFD 1099 Calls:</li>
                <li class="nav-item">PFD Referral w/o Assistance Calls:</li>
                <li class="nav-item">PFD Reactivate Account Calls:</li>
                <li class="nav-item">PFD Create Account Calls:</li>
                <li class="nav-item mt-2">Total Calls:</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
