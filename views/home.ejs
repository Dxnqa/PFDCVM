<%- include("partials/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
  </head>
  <body>
    <div class="container mt-4 pb-3">
      <div class="row">
        <div
          class="col-md-4 border border-black border-3 rounded-2 px-3 py-2 text-white"
          style="background-color: #5c8dc5"
          id="TechPanel"
        >
          <!--Tech Panel-->
          <form action="/submit" method="POST" class="text-center">
            <label for="name" class="h4">Caller</label>
            <!--Caller name-->
            <input
              type="text"
              name="name"
              id="name"
              class="form-control border border-black"
              placeholder="Caller Name"
            />

            <label for="category" class="h4">Category</label>
            <!--Call Category-->
            <select
              name="category"
              id="category"
              class="form-select mt-2 mb-md-3 border border-black"
            >
              <option selected disabled>Select a category</option>
              <option value="PFD view Status">PFD view Status</option>
              <option value="PFD Password Reset">PFD Password Reset</option>
              <option value="PFD MFA Issues">PFD MFA Issues</option>
              <option value="PFD Create Account - New">
                PFD Create Account - New
              </option>
              <option value="PFD Verified & Activated a Disabled Account">
                PFD Verified & Activated a Disabled Account
              </option>
              <option value="PFD Account Disabled / Has other Account(s)">
                PFD Account Disabled / Has other Account(s)
              </option>
              <option
                value="PFD Account Disabled No Profile, Recreate for 2026"
              >
                PFD Account Disabled No Profile, Recreate for 2026
              </option>
              <option value="PFD E-Signature">PFD E-Signature</option>
              <option value="PFD Referred w/o MyAK Asst.">
                PFD Referred w/o MyAK Asst.
              </option>
              <option value="PFD Referred with MyAK Asst.">
                PFD Referred with MyAK Asst.
              </option>
              <option value="PFD MyAlaska Combo Questions">
                PFD MyAlaska Combo Questions
              </option>
              <option value="PFD Fraud">PFD Fraud</option>
              <option value="PFD 1099">PFD 1099</option>
              <option value="PFD MyAlaska App Issues">
                PFD MyAlaska App Issues
              </option>
            </select>
            <label for="resolution" class="h4">Resolution status</label>
            <!--Resolution Status-->
            <select
              name="resolution"
              id="resolution"
              class="form-select mt-2 mb-md-3 border border-black"
            >
              <option selected>Did you resolve this?</option>
              <option value="Yes - minimal assistance">
                Yes - minimal assistance
              </option>
              <option value="Yes - additional assistance">
                Yes - additional assistance
              </option>
              <option value="Yes - extended duration">
                Yes - extended duration
              </option>
              <option value="No - unable to help user">
                No - unable to help user
              </option>
              <option value="No - call disconnected">
                No - call disconnected
              </option>
              <option value="No - Issue unrelated">No - Issue unrelated</option>
            </select>
            <label for="notes" class="h4">Technician Notes</label>
            <!--Additional notes-->
            <textarea
              name="notes"
              id="notes"
              style="height: 90px; resize: none"
              placeholder="Additional Notes(optional)"
              maxlength="250"
              class="form-control mt-2 mb-md-1 border border-black"
            ></textarea>
            <a
              href="database"
              class="btn btn-primary rounded-2 border border-2 border-black"
              >Database</a
            >
            <input
              type="submit"
              class="btn btn-success border border-2 border-black mt-3 mb-3 rounded-3"
              value="Submit Entry"
            />
          </form>
        </div>
        <div class="col-md-1"></div>
        <div
          class="col-md-7 bg-transparent rounded-2 px-3 py-2 d-none d-md-block"
        >
          <!--Activity/Logs Section-->

          <div class="row">
            <div
              class="col-md-6 border border-2 border-black text-center rounded-2 text-white"
              style="background-color: #5c8dc5"
            >
              <p class="h4 fw-semibold">Activity logs</p>
            </div>
            <div class="col-md-1"></div>
            <div
              class="col-md-5 border border-2 border-black rounded-2 text-white"
              style="background-color: #5c8dc5"
            >
              <p class="h4 fw-semibold text-center">Calls recorded</p>
              <div class="row px-2">
                <ul class="nav nav-pills flex-column mb-auto">
                  <li class="nav-item">PFD total Calls:</li>
                  <li class="nav-item">MyAlaska total Calls:</li>
                  <li class="nav-item">
                    MyAlaska App Issues not PFD:
                  </li>
                  <li class="nav-item">Total Calls:</li>
                </ul>
              </div>
              <br>
              <div class="row px-2">
                <ul class="nav nav-pills flex-column mb-auto">
                  <li class="nav-item">Responded to MyAlaska Emails:</li>
                  <li class="nav-item">SOA Weekly Reported Call Totals:</li>
                  <li class="nav-item">SOA Documented Calls:</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
